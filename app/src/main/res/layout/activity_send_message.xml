<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/TimeoutInput"
        android:layout_width="46dp"
        android:layout_height="56dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="352dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/MessageBody"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="318dp"
        android:layout_height="173dp"
        android:ems="10"
        android:hint="Enter Message Body"
        android:inputType="textMultiLine|textImeMultiLine|textWebEditText"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/Recepient"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/Recepient"
        android:layout_width="240dp"
        android:layout_height="72dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="To:"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="124dp"
        android:layout_height="61dp"
        android:text="Send"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="352dp"
        app:layout_constraintLeft_toRightOf="@+id/Timeout"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="352dp"
        android:text="Timeout Length: (Min)"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Timeout"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>